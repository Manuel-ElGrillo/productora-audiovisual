<style>
  /* ============================================
     HEADER - Estilo panel de hardware
  ============================================ */
  header {
    background: linear-gradient(180deg, #2E2E2E 0%, #3C3C3C 100%);
    border-bottom: 3px solid var(--color-scarlett-red);
    padding: var(--spacing-md) 0;
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: 
      0 4px 8px rgba(0, 0, 0, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.05);
  }

  .nav-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  /* Logo con LED */
  .logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: var(--font-size-xl);
    font-weight: 900;
    color: var(--color-white);
    text-transform: uppercase;
    letter-spacing: 2px;
    transition: var(--transition);
  }

  .logo:hover {
    color: var(--color-scarlett-red);
    text-shadow: 0 0 10px rgba(196, 30, 58, 0.5);
  }

  /* Navigation Links */
  .nav-links {
    display: flex;
    list-style: none;
    gap: var(--spacing-md);
    align-items: center;
  }

  .nav-link {
    color: var(--color-metal-silver);
    font-weight: 700;
    text-transform: uppercase;
    font-size: var(--font-size-small);
    letter-spacing: 1px;
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--border-radius);
    transition: var(--transition);
    position: relative;
  }

  .nav-link::before {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 2px;
    background: var(--color-scarlett-red);
    transition: var(--transition);
  }

  .nav-link:hover {
    color: var(--color-white);
  }

  .nav-link:hover::before {
    width: 80%;
  }

  /* Mobile menu button */
  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: var(--spacing-xs);
  }

  .mobile-menu-btn span {
    width: 25px;
    height: 3px;
    background: var(--color-scarlett-red);
    border-radius: 2px;
    transition: var(--transition);
  }

  .mobile-menu-btn:hover span {
    background: var(--color-white);
  }

  /* ============================================
     FOOTER - Estilo panel trasero
  ============================================ */
  footer {
    background: linear-gradient(180deg, #1A1A1A 0%, #2E2E2E 100%);
    color: var(--color-metal-silver);
    padding: var(--spacing-2xl) 0 var(--spacing-lg);
    margin-top: var(--spacing-2xl);
    border-top: 3px solid var(--color-scarlett-red);
    box-shadow: inset 0 4px 8px rgba(0, 0, 0, 0.3);
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-xl);
  }

  .footer-section h4 {
    color: var(--color-scarlett-red);
    margin-bottom: var(--spacing-sm);
    font-size: var(--font-size-base);
  }

  .footer-section p {
    margin-bottom: var(--spacing-sm);
    font-size: var(--font-size-small);
  }

  .footer-links {
    list-style: none;
  }

  .footer-links li {
    margin-bottom: var(--spacing-xs);
    font-size: var(--font-size-small);
  }

  .footer-links a {
    color: var(--color-metal-silver);
    transition: var(--transition);
  }

  .footer-links a:hover {
    color: var(--color-white);
    padding-left: 5px;
  }

  .led-group {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    margin-top: var(--spacing-sm);
  }

  .led-group span {
    font-size: var(--font-size-small);
    color: var(--color-led-green);
    text-transform: uppercase;
    font-weight: 700;
  }

  .footer-bottom {
    border-top: 1px solid var(--color-metal-dark);
    padding-top: var(--spacing-md);
    text-align: center;
  }

  .footer-bottom p {
    margin-bottom: var(--spacing-xs);
    font-size: var(--font-size-small);
  }

  .footer-tech {
    color: var(--color-scarlett-red);
    font-weight: 700;
    font-size: 0.75rem;
  }

  /* ============================================
     RESPONSIVE
  ============================================ */
  @media (max-width: 768px) {
    .mobile-menu-btn {
      display: flex;
    }

    .nav-links {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: linear-gradient(180deg, #2E2E2E 0%, #1A1A1A 100%);
      flex-direction: column;
      padding: var(--spacing-md);
      gap: var(--spacing-sm);
      transform: translateY(-100%);
      opacity: 0;
      pointer-events: none;
      transition: var(--transition);
      border-bottom: 3px solid var(--color-scarlett-red);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5);
    }

    .nav-links.active {
      transform: translateY(0);
      opacity: 1;
      pointer-events: all;
    }

    .nav-link {
      width: 100%;
      text-align: center;
      padding: var(--spacing-sm);
      background: rgba(60, 60, 60, 0.5);
      border-radius: var(--border-radius);
    }

    .footer-content {
      grid-template-columns: 1fr;
      text-align: center;
    }
  }
</style>