<style>
  /* ============================================
     HERO SECTION - Panel Principal
  ============================================ */
  .hero {
    background: linear-gradient(135deg, #1A1A1A 0%, #2E2E2E 100%);
    padding: var(--spacing-2xl) 0;
    min-height: 70vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-scarlett);
  }

  .hero-content {
    width: 100%;
  }

  .hero-panel {
    background: linear-gradient(135deg, #3C3C3C 0%, #2E2E2E 100%);
    border-radius: var(--border-radius-lg);
    padding: var(--spacing-2xl);
    box-shadow: var(--shadow-deep);
    border: 2px solid var(--color-scarlett-red);
    position: relative;
  }

  /* Knobs decorativos en el hero */
  .knobs-group {
    display: flex;
    gap: var(--spacing-lg);
    justify-content: center;
    margin-bottom: var(--spacing-xl);
  }

  .knob {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: radial-gradient(circle at 30% 30%, #E8E8E8, #A0A0A0);
    box-shadow: var(--shadow-knob);
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .knob::before {
    content: '';
    position: absolute;
    width: 65%;
    height: 65%;
    background: radial-gradient(circle, #3C3C3C, #1A1A1A);
    border-radius: 50%;
    box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.5);
  }

  .knob::after {
    content: '';
    position: absolute;
    width: 3px;
    height: 25%;
    background: var(--color-scarlett-red);
    top: 12%;
    border-radius: 2px;
    box-shadow: 0 0 6px var(--color-scarlett-red);
    animation: knob-rotate 4s linear infinite;
  }

  @keyframes knob-rotate {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .knob[data-label]::before {
    content: attr(data-label);
    position: absolute;
    bottom: -25px;
    font-size: 0.65rem;
    color: var(--color-metal-silver);
    font-weight: 700;
    letter-spacing: 1px;
  }

  .hero h1 {
    text-align: center;
    color: var(--color-white);
    margin-bottom: var(--spacing-md);
    text-shadow: 0 2px 10px rgba(196, 30, 58, 0.3);
  }

  .hero-subtitle {
    text-align: center;
    font-size: var(--font-size-large);
    color: var(--color-metal-silver);
    margin-bottom: var(--spacing-xl);
    line-height: 1.6;
  }

  .hero-cta {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: var(--spacing-xl);
  }

  /* VU Meter decorativo */
  .vu-meter {
    display: flex;
    gap: 4px;
    justify-content: center;
    margin-top: var(--spacing-xl);
  }

  .vu-bar {
    width: 40px;
    height: 8px;
    background: var(--color-metal-dark);
    border-radius: 2px;
    transition: var(--transition);
  }

  .vu-bar.active {
    background: var(--color-led-green);
    box-shadow: 0 0 8px var(--color-led-green);
    animation: vu-pulse 1.5s ease-in-out infinite;
  }

  @keyframes vu-pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  /* ============================================
     SERVICES SECTION
  ============================================ */
  .services-section {
    background: var(--color-metal-dark);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .section-header h2 {
    margin-bottom: var(--spacing-sm);
  }

  .led-indicator {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-xs);
    margin: var(--spacing-md) 0;
  }

  .led-indicator span {
    color: var(--color-led-green);
    font-size: var(--font-size-small);
    font-weight: 700;
    letter-spacing: 1px;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--spacing-lg);
  }

  .service-card {
    background: linear-gradient(135deg, #3C3C3C 0%, #2E2E2E 100%);
    border-radius: var(--border-radius-lg);
    padding: var(--spacing-lg);
    transition: var(--transition);
    position: relative;
  }

  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: 
      var(--shadow-deep),
      0 0 30px rgba(196, 30, 58, 0.2);
  }

  .service-icon {
    display: flex;
    justify-content: center;
    margin-bottom: var(--spacing-md);
  }

  .knob-small {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: radial-gradient(circle at 30% 30%, #E8E8E8, #A0A0A0);
    box-shadow: var(--shadow-knob);
    position: relative;
  }

  .knob-small::before {
    content: '';
    position: absolute;
    width: 60%;
    height: 60%;
    background: radial-gradient(circle, #3C3C3C, #1A1A1A);
    border-radius: 50%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .knob-small::after {
    content: '';
    position: absolute;
    width: 2px;
    height: 30%;
    background: var(--color-scarlett-red);
    top: 10%;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 1px;
    box-shadow: 0 0 4px var(--color-scarlett-red);
  }

  .service-card h3 {
    text-align: center;
    margin-bottom: var(--spacing-sm);
    color: var(--color-scarlett-red);
    font-size: var(--font-size-base);
  }

  .service-card p {
    text-align: center;
    font-size: var(--font-size-small);
    margin-bottom: var(--spacing-md);
    line-height: 1.6;
  }

  .service-specs {
    display: flex;
    justify-content: center;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
  }

  .spec {
    background: rgba(196, 30, 58, 0.1);
    border: 1px solid var(--color-scarlett-red);
    padding: 4px 12px;
    border-radius: var(--border-radius);
    font-size: 0.7rem;
    font-weight: 700;
    color: var(--color-scarlett-red);
  }

  /* CTA Card especial */
  .cta-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: var(--gradient-scarlett);
    border: 2px solid var(--color-scarlett-dark);
  }

  .knob-large {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: radial-gradient(circle at 30% 30%, #E8E8E8, #A0A0A0);
    box-shadow: var(--shadow-knob);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--spacing-md);
    cursor: pointer;
    transition: var(--transition);
  }

  .knob-large:hover {
    transform: scale(1.1);
  }

  .knob-value {
    font-size: var(--font-size-2xl);
    color: var(--color-scarlett-red);
    font-weight: 900;
  }

  .cta-card h3, .cta-card p {
    color: var(--color-white);
  }

  /* ============================================
     STATS SECTION - Medidores
  ============================================ */
  .stats-section {
    background: var(--color-black);
  }

  .stats-panel {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-xl);
    padding: var(--spacing-2xl);
  }

  .stat-item {
    text-align: center;
  }

  .stat-meter {
    width: 100%;
    height: 8px;
    background: var(--color-metal-dark);
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: var(--spacing-md);
    box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.5);
  }

  .meter-fill {
    height: 100%;
    background: var(--gradient-scarlett);
    box-shadow: 0 0 10px var(--color-scarlett-red);
    animation: meter-glow 2s ease-in-out infinite;
  }

  @keyframes meter-glow {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.8; }
  }

  .stat-item h4 {
    font-size: var(--font-size-2xl);
    color: var(--color-scarlett-red);
    margin-bottom: var(--spacing-xs);
  }

  .stat-item p {
    font-size: var(--font-size-small);
    color: var(--color-metal-silver);
    letter-spacing: 1px;
  }

  /* ============================================
     CTA FINAL
  ============================================ */
  .cta-section {
    background: linear-gradient(135deg, #1A1A1A 0%, #2E2E2E 100%);
  }

  .cta-panel {
    text-align: center;
    padding: var(--spacing-2xl);
  }

  .knobs-row {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-xl);
  }

  .cta-panel h2 {
    margin-bottom: var(--spacing-sm);
  }

  .cta-panel p {
    margin-bottom: var(--spacing-xl);
    font-size: var(--font-size-large);
  }

  .btn-large {
    padding: var(--spacing-md) var(--spacing-2xl);
    font-size: var(--font-size-large);
  }

  .cta-panel .led-group {
    justify-content: center;
    margin-top: var(--spacing-xl);
  }

  /* ============================================
     RESPONSIVE
  ============================================ */
  @media (max-width: 768px) {
    .hero {
      min-height: auto;
      padding: var(--spacing-xl) 0;
    }

    .hero-panel {
      padding: var(--spacing-lg);
    }

    .knobs-group {
      gap: var(--spacing-md);
    }

    .knob {
      width: 50px;
      height: 50px;
    }

    .hero h1 {
      font-size: var(--font-size-2xl);
    }

    .hero-subtitle {
      font-size: var(--font-size-base);
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

    .stats-panel {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }
  }
</style>